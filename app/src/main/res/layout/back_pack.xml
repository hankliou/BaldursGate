<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/backpack"
               android:id="@+id/pack">

    </ImageView>
    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/use"
                 android:id="@+id/use"
                 android:padding="0sp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="283dp">

    </ImageButton>
    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/abun"
                 android:id="@+id/ubun"
                 android:padding="0sp"
                 android:layout_marginLeft="115dp"
                 android:layout_marginTop="283dp">

    </ImageButton>


    <Button android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="30dp"
            android:id="@+id/item1"
    />
    <Button android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_toRightOf="@id/item1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:id="@+id/item2"
    />
    <Button android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_toRightOf="@id/item2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:id="@+id/item3"
    />
    <Button android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="250dp"
            android:layout_below="@id/item1"
            android:layout_marginTop="15dp"
            android:id="@+id/item4"
    />
    <Button android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/item4"
            android:layout_marginTop="15dp"
            android:layout_below="@id/item2"
            android:id="@+id/item5"
    />
    <Button android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/item5"
            android:layout_marginTop="15dp"
            android:layout_below="@id/item3"
            android:id="@+id/item6"
    />

    <TextView
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="80dp"
            android:textStyle="bold"
            android:textSize="17dp"
            android:id="@+id/itemname"
            android:text="物品名稱"
    />
    <TextView
            android:layout_width="155dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/itemcontext"
            android:text="物品描述"
            android:layout_below="@+id/itemname"
    />
    <TextView
            android:layout_width="155dp"
            android:layout_height="125dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/itemcontext2"
            android:text="物品使用說明"
            android:layout_below="@+id/itemcontext"
    />
    <!--
    //抽物品用的下面那個之後要刪掉
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="抽"
        android:id="@+id/get"
        android:layout_toRightOf="@+id/itemcontext2"
        android:layout_below="@+id/item4"
        ></Button>
       -->
</RelativeLayout>